##
##  Makefile -- Build procedure for sample cosign Apache module
##  Autogenerated via ``apxs -n cosign -g''.
##

#   the used tools
CC=             @CC@
APXS2=          @APXS2@
APACHECTL2=     @APACHECTL2@
INSTALL=        @INSTALL@


#   additional user defines, includes and libraries

INCPATH=        @CPPFLAGS@ -I../../libsnet @GSSINC@ -I../../common/ -I../common/
OPTOPTS=        @OPTOPTS@
DEFS=           @TLSDEFS@ @KRBDEFS@ @GSSDEFS@
LIBS=           @GSSLIBS@ @ADDLIBS@
LDFLAGS=        @GSSLDFLAGS@ @ADDLDFLAGS@ @LDFLAGS@ ${LIBS}

CFLAGS=         ${DEFS} ${INCPATH}

SRC=	mod_cosign.c \
	../common/connect.c ../common/cookiefs.c ../common/sparse.c \
	../../common/argcargv.c ../../common/fbase64.c \
	../../common/mkcookie.c ../../common/rate.c \
	../../version.c \
	../../libsnet/snet.c

#   the default target
all: mod_cosign.la

#   compile the DSO file
mod_cosign.la: ${SRC}
	$(APXS2) -c ${CFLAGS} ${LDFLAGS} ${SRC}

#   install the DSO file into the Apache installation
#   and activate it in the Apache configuration
install: all
	$(APXS2) -i -a -n 'cosign' mod_cosign.la

#   cleanup
clean:
	rm -f *.o mod_cosign.la
	rm -rf .libs/

#   reload the module by installing and restarting Apache
reload: install restart

#   the general Apache start/restart/stop procedures
start:
	$(APACHECTL2) start
restart:
	$(APACHECTL2) restart
stop:
	$(APACHECTL2) stop

