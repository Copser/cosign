ALL	= error.html login.html login_error.html redirect.html verify-logout.html post_error.html
prefix=@prefix@
exec_prefix=@exec_prefix@
TMPLDIR  = @prefix@/templates
HTMLDIR  = @prefix@/html
INSTALL	=	@INSTALL@

.SUFFIXES: .m4 .html

.m4.html:
	m4 $*.m4 >$*.html

all: ${ALL}

install : all
	-mkdir -p ${exec_prefix}
	-mkdir -p ${TMPLDIR}
	for i in ${ALL}; do \
	    ${INSTALL} -m 0644 -c $$i ${TMPLDIR}/; \
	    cp -r images/ services/ cosign.css post_error.html ${HTMLDIR}/; \
	done

clean:
	rm -f ${ALL}
