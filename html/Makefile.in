ALL	= error.html login.html redirect.html service-menu.html splash.html verify-logout.html post_error.html
prefix=@prefix@
exec_prefix=@exec_prefix@
TMPLDIR  = @prefix@/templates
INSTALL	=	@INSTALL@

M4 = /usr/ccs/bin/m4

.SUFFIXES: .m4 .html

.m4.html:
	${M4} $*.m4 >$*.html

all: ${ALL}

install : all
	-mkdir -p ${exec_prefix}
	-mkdir -p ${TMPLDIR}
	for i in ${ALL}; do \
	    ${INSTALL} -m 0644 -c $$i ${TMPLDIR}/; \
	done

clean:
	/bin/rm -f ${ALL}
